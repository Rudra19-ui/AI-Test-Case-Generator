{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "TestCase",
  "description": "Schema for a healthcare software test case",
  "type": "object",
  "required": [
    "test_id",
    "title",
    "description",
    "test_steps",
    "expected_outcome",
    "priority"
  ],
  "properties": {
    "test_id": {
      "type": "string",
      "description": "Unique identifier for the test case",
      "pattern": "^[A-Za-z0-9_-]+$"
    },
    "title": {
      "type": "string",
      "description": "Short descriptive title for the test case",
      "minLength": 5,
      "maxLength": 100
    },
    "description": {
      "type": "string",
      "description": "Detailed description of what the test case verifies",
      "minLength": 10
    },
    "preconditions": {
      "type": "array",
      "description": "List of preconditions required for the test",
      "items": {
        "type": "string"
      }
    },
    "test_steps": {
      "type": "array",
      "description": "Ordered list of test steps",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": [
          "step_number",
          "description",
          "expected_result"
        ],
        "properties": {
          "step_number": {
            "type": "integer",
            "description": "Step number in sequence",
            "minimum": 1
          },
          "description": {
            "type": "string",
            "description": "Description of the test step",
            "minLength": 5
          },
          "expected_result": {
            "type": "string",
            "description": "Expected result for this step",
            "minLength": 5
          }
        }
      }
    },
    "expected_outcome": {
      "type": "string",
      "description": "Overall expected outcome of the test case",
      "minLength": 5
    },
    "priority": {
      "type": "string",
      "description": "Priority level",
      "enum": ["High", "Medium", "Low", "high", "medium", "low"]
    },
    "requirement_id": {
      "type": ["string", "null"],
      "description": "ID of the source requirement",
      "pattern": "^[A-Za-z0-9_-]+$"
    },
    "compliance_tags": {
      "type": "array",
      "description": "Relevant compliance tags (HIPAA, FHIR, etc.)",
      "items": {
        "type": "string"
      }
    },
    "created_at": {
      "type": "string",
      "description": "Creation timestamp in ISO format",
      "format": "date-time"
    }
  }
}